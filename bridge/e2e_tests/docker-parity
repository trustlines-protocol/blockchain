FROM parity/parity:v2.4.6

ARG chain_spec_path

COPY --chown=parity ${chain_spec_path} /home/parity/.local/share/io.parity.ethereum/chain_spec.json
COPY --chown=parity ./node_config/shared_config.toml /home/parity/.local/share/io.parity.ethereum/config.toml
COPY --chown=parity ./node_config/shared_key.json /home/parity/.local/share/io.parity.ethereum/keys/key.json
COPY --chown=parity ./node_config/shared_password /home/parity/.local/share/io.parity.ethereum/password
